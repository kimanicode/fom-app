{
  "name": "fom-monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "pnpm -C apps/api start:dev & pnpm -C apps/mobile start",
    "dev:api": "pnpm -C apps/api start:dev",
    "dev:mobile": "pnpm -C apps/mobile start",
    "db:migrate": "pnpm -C apps/api prisma migrate dev",
    "db:generate": "pnpm -C apps/api prisma generate",
    "seed": "pnpm -C apps/api prisma db seed",
    "lint": "pnpm -C apps/mobile lint"
  },
  "devDependencies": {
    "prisma": "^7.3.0"
  },
  "dependencies": {
    "@prisma/client": "^7.3.0"
  }
}
